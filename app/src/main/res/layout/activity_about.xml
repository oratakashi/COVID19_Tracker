<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    tools:context=".ui.about.AboutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_20"
        android:paddingStart="@dimen/padding_15"
        android:paddingEnd="@dimen/padding_15">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"
            android:fontFamily="@font/bold"
            android:text="@string/title_contributor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_12"
            android:fontFamily="@font/regular"
            android:text="@string/title_contributor_description" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvContributor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_source_code_text"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/padding_15"
            android:textSize="@dimen/font_18"
            android:fontFamily="@font/bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_open_source_description"
            android:textColor="@color/grey"
            android:fontFamily="@font/regular"
            android:textSize="@dimen/font_12"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvGithub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/dark_grey"
            app:cardCornerRadius="@dimen/radius_8"
            app:cardElevation="@dimen/elevation_8"
            android:layout_marginTop="@dimen/margin_10">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_25">
                <ImageView
                    android:layout_width="@dimen/size_42"
                    android:layout_height="@dimen/size_42"
                    android:src="@drawable/ic_github"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_github"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_18"
                    android:fontFamily="@font/bold"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_50"
                    android:layout_marginEnd="@dimen/margin_50"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/title_data_source"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18" />
        <TextView
            android:id="@+id/tvSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text=""
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/title_version_app"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18" />
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text=""
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

</ScrollView>