<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/clBase"
    tools:context=".ui.statistik.StatistikFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivIcConfirmed"
            android:layout_width="@dimen/size_52"
            android:layout_height="@dimen/size_52"
            android:src="@drawable/ic_confirmed"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/ivIcConfirmed">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_confirm"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/font_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_confirm_description"
                android:textColor="@color/grey"
                android:fontFamily="@font/regular"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/tvConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textAlignment="textEnd"
                android:textSize="@dimen/font_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_person"
                android:textColor="@color/grey"
                android:layout_gravity="end"
                android:textSize="@dimen/font_12"
                android:textAlignment="textEnd"
                android:fontFamily="@font/regular"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20">
        <ImageView
            android:id="@+id/ivIcRecovered"
            android:layout_width="@dimen/size_52"
            android:layout_height="@dimen/size_52"
            android:src="@drawable/ic_recovered"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/ivIcRecovered">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_recovered"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/font_14"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvRecoveredPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_0_percent"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/font_12"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_recovered_description"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/font_12"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/tvRecovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textAlignment="textEnd"
                android:textSize="@dimen/font_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_person"
                android:textColor="@color/grey"
                android:layout_gravity="end"
                android:textSize="@dimen/font_12"
                android:textAlignment="textEnd"
                android:fontFamily="@font/regular"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20">
        <ImageView
            android:id="@+id/ivIcDeath"
            android:layout_width="@dimen/size_52"
            android:layout_height="@dimen/size_52"
            android:src="@drawable/ic_death"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/ivIcDeath">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_deaths"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/font_14"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDeathPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_0_percent"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/font_12"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_death_description"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/font_12"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/tvDeath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textAlignment="textEnd"
                android:textSize="@dimen/font_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_person"
                android:textColor="@color/grey"
                android:layout_gravity="end"
                android:textSize="@dimen/font_12"
                android:textAlignment="textEnd"
                android:fontFamily="@font/regular"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>