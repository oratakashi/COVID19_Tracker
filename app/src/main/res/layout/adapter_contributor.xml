<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_256"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/dark_grey"
    android:layout_marginStart="@dimen/margin_10"
    app:cardCornerRadius="@dimen/radius_8"
    app:cardElevation="@dimen/elevation_8"
    android:id="@+id/cvContributor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_15">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivPhoto"
            android:layout_width="@dimen/size_42"
            android:layout_height="@dimen/size_42"
            android:src="@drawable/no_pict"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/foo"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/font_18"
            android:layout_marginTop="@dimen/margin_10"/>
        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/foo"
            android:fontFamily="@font/regular"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:textSize="@dimen/font_12"/>
        <TextView
            android:id="@+id/tvInstagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/foo"
            android:fontFamily="@font/regular"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:textSize="@dimen/font_12"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>