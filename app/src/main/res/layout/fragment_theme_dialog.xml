<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_bg"
    android:paddingTop="@dimen/padding_8"
    android:paddingBottom="@dimen/padding_8"
    android:paddingStart="@dimen/padding_10"
    android:paddingEnd="@dimen/padding_10"
    style="@style/AppBottomSheetDialogTheme"
    tools:context=".ui.theme.ThemeDialogFragment">
    <View
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_3"
        android:background="@color/line"
        android:layout_gravity="center_horizontal"/>
    <View
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_3"
        android:background="@color/line"
        android:layout_marginTop="@dimen/margin_3"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_theme"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18"
        android:fontFamily="@font/bold"
        android:layout_marginTop="@dimen/margin_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_detail_theme"
        android:fontFamily="@font/regular"
        android:textColor="@color/grey"
        android:textSize="@dimen/font_14"
        android:layout_marginBottom="@dimen/margin_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvBasic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="@dimen/size_2dp"
            app:cardBackgroundColor="@color/dark_grey"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="@dimen/margin_10"
            app:cardCornerRadius="@dimen/radius_8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_20">
                <ImageView
                    android:layout_width="@dimen/size_52"
                    android:layout_height="@dimen/size_52"
                    android:src="@drawable/ic_basic_mode"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_basic_theme"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/margin_10"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_basic_description"
                    android:textColor="@color/grey"
                    android:textAlignment="center"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/font_12"
                    android:layout_marginTop="@dimen/margin_5"/>
                <TextView
                    android:id="@+id/tvBasicStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_active"
                    android:textColor="@color/green"
                    android:textAlignment="center"
                    android:fontFamily="@font/bold"
                    android:visibility="invisible"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textSize="@dimen/font_14"
                    android:layout_marginBottom="@dimen/margin_18"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvAdvance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="@dimen/size_2dp"
            app:cardBackgroundColor="@color/dark_grey"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="@dimen/margin_10"
            app:cardCornerRadius="@dimen/radius_8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_20">
                <ImageView
                    android:layout_width="@dimen/size_52"
                    android:layout_height="@dimen/size_52"
                    android:src="@drawable/ic_advance_mode"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_advance_theme"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/margin_10"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_advance_description"
                    android:textColor="@color/grey"
                    android:textAlignment="center"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/font_12"
                    android:layout_marginTop="@dimen/margin_5"/>
                <TextView
                    android:id="@+id/tvAdvanceStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_active"
                    android:textColor="@color/green"
                    android:textAlignment="center"
                    android:fontFamily="@font/bold"
                    android:visibility="invisible"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>